        android:left="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#E0E0E0" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="#EEEEEE" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>