<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_student__st_lettering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_activity__student"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/student_activity__photo"
        android:layout_width="126dp"
        android:layout_height="117dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_text__first_name_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin = "8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_activity__photo"
        app:layout_constraintTop_toBottomOf="@+id/activity_student__st_lettering"
        app:layout_constraintVertical_bias="0.062" />

    <EditText
        android:id="@+id/set_text__second_name_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student_activity__photo"
        app:layout_constraintTop_toBottomOf="@+id/set_text__first_name_student"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/activity_student__delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/activity_student__delete_student_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_student__save_button"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_activity__photo"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/activity_student__save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin = "8dp"
        android:text="@string/activity_student__save_student_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_text__second_name_student"
        app:layout_constraintVertical_bias="0.135" />
</android.support.constraint.ConstraintLayout>