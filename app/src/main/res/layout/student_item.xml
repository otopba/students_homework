<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background">

    <android.support.v7.widget.CardView
        android:id="@+id/movie_item__card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/student_item__tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/movie_item__studentPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/female_1"
            android:contentDescription="@string/student_avatar" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/student_item__tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movie_item__card_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Student name"
        android:layout_marginEnd="20dp" />


    <View
        android:id="@+id/student_item__top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGray"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/student_item__bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGray"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/student_item__left"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/darkGray"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/student_item__right"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/darkGray"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>