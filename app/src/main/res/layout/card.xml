<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/card__label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/card__photo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/female_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card__label"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/card__second_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/card__photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card__photo"
        app:layout_constraintTop_toBottomOf="@id/card__label"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/card__first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/card__male_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card__photo"
        app:layout_constraintTop_toBottomOf="@id/card__second_name" />

    <CheckBox
        android:id="@+id/card__male_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/male_gender"
        app:layout_constraintBottom_toBottomOf="@id/card__photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card__photo"
        app:layout_constraintTop_toBottomOf="@id/card__first_name" />

    <Button
        android:id="@+id/card__delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/delete"
        app:layout_constraintTop_toBottomOf="@id/card__photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/card__save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/save"
        app:layout_constraintTop_toBottomOf="@id/card__photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>