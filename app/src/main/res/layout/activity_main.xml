<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_main__rv_students"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_main__btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="40" />

    <Button
        android:id="@+id/activity_main__btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/btn_add"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/activity_main__sep_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__rv_students"
        app:layout_constraintVertical_weight="5" />

    <View
        android:id="@+id/activity_main__sep_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/cl_edit__title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__btn_add"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/cl_edit__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/edit_title"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/data_layout__edit_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main__sep_line"
        app:layout_constraintVertical_weight="5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/data_layout__edit_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@id/names_layout__edit_fname"
        app:layout_constraintEnd_toStartOf="@string/edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/names_layout__edit_name" />

    <EditText
        android:id="@+id/names_layout__edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_name"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/names_layout__edit_fname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/data_layout__edit_img"
        app:layout_constraintTop_toBottomOf="@id/cl_edit__title"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="5" />

    <EditText
        android:id="@+id/names_layout__edit_fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_fname"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/sex_layout__checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/data_layout__edit_img"
        app:layout_constraintTop_toBottomOf="@id/names_layout__edit_name"
        app:layout_constraintVertical_weight="5" />

    <CheckBox
        android:id="@+id/sex_layout__checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cl_edit__delete"
        app:layout_constraintEnd_toStartOf="@id/sex_layout__text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/data_layout__edit_img"
        app:layout_constraintTop_toBottomOf="@id/names_layout__edit_fname" />

    <TextView
        android:id="@+id/sex_layout__text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_checkbox"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/cl_edit__delete"
        app:layout_constraintEnd_toEndOf="@id/names_layout__edit_fname"
        app:layout_constraintStart_toEndOf="@id/sex_layout__checkbox"
        app:layout_constraintTop_toBottomOf="@id/names_layout__edit_fname"
        app:layout_constraintVertical_weight="5" />

    <Button
        android:id="@+id/cl_edit__delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/edit_delete"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_edit__save"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cl_edit__save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/edit_save"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cl_edit__delete" />

</android.support.constraint.ConstraintLayout>