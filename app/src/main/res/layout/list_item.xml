<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_item_border"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/list_item_photo_dimen"
        android:layout_height="@dimen/list_item_photo_dimen"
        android:layout_gravity="center"
        android:layout_marginRight="12dp"
        android:shape="ring"
        app:cardCornerRadius="@dimen/list_item_photo_corner_radius">

        <ImageView
            android:id="@+id/list_item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/colorBackgroundAccent"
            android:scaleType="centerCrop"
            tools:src="@drawable/female_1" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Student"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_default" />
</LinearLayout>